<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="businessNameStyle">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="businessTagStyle">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="timingHeadingStyle">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="timingStyle">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="phoneStyle">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
